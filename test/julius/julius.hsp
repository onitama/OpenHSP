#include "julius_lib.hsp"


init_julius

sockidx = 0
domain = "127.0.0.1"
PORT = 10500


sockopen sockidx, domain, PORT

if stat != 0 {
  mes "Error in opening socket"
  end
}

sdim words, 4096, 0
repeat -1
  if is_recieved(sockidx) == 0 {
    get_word_list words
    mes "L1 " + length(words)
    repeat length(words)
      mes "" + cnt + ": " + words(cnt)
    loop
    sdim words, 4096, 0
  }
  mes "TEST"
  wait 100
loop
