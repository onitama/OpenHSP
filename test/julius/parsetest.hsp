idx = 0
W_PREFIX = "WORD=\""
W_POSTFIX = "\""
CM_PREFIX = "CM=\""
CM_POSTFIX = "\""
W_PREFIX_LEN = 6
W_POSTFIX_LEN = 1
CM_PREFIX_LEN = 4
