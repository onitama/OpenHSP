#include "hsp3dish.as"

	mmload "game/smart_and_active.mp3",1
	mmload "game/explos.wav",2
	button "PLAY",*pplay
	button "STOP",*pstop
	button "WAV",*pwav

*main
	redraw 0
	mmstat mstat,2,16
	pos 0,120
	mes "OK..."+mstat
	pos mousex-4,mousey-4:mes "+"
	redraw 1
	await 1000/30
	goto *main
*pplay
	mmplay 1
	goto *main
*pstop
	mmstop
	goto *main
*pwav
	mmplay 2
	goto *main

